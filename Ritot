    <script>
        function toggleInfo(button) {
            const card = button.closest('.card, .topic-item');
            const extraInfo = card.querySelector('.extra-info');
            
            extraInfo.classList.toggle('active');
            button.textContent = extraInfo.classList.contains('active') ? 'Show Less' : 
                                 button.textContent.includes('Learn') ? 'Learn More' : 
                                 button.textContent.includes('View') ? 'View Details' : 
                                 button.textContent.includes('Read') ? 'Read Full Policy' : 'View All Terms';
        }

        function scrollToSection(sectionId) {
            document.getElementById(sectionId).scrollIntoView({ behavior: 'smooth' });
        }

        // Share Modal Functions
        function openShareModal() {
            document.getElementById('shareModal').classList.add('active');
        }

        function closeShareModal() {
            document.getElementById('shareModal').classList.remove('active');
        }

        function shareViaEmail() {
            const subject = encodeURIComponent('Check out Ritot Website!');
            const body = encodeURIComponent('I found this amazing website called Ritot. Check it out: ' + window.location.href);
            window.open(`mailto:?subject=${subject}&body=${body}`, '_blank');
        }

        function shareViaWhatsApp() {
            const text = encodeURIComponent('Check out this amazing Ritot website: ' + window.location.href);
            window.open(`https://wa.me/?text=${text}`, '_blank');
        }

        function shareViaTwitter() {
            const text = encodeURIComponent('Check out Ritot - Empowering Digital Excellence!');
            const url = encodeURIComponent(window.location.href);
            window.open(`https://twitter.com/intent/tweet?text=${text}&url=${url}`, '_blank');
        }

        function shareViaFacebook() {
            const url = encodeURIComponent(window.location.href);
            window.open(`https://www.facebook.com/sharer/sharer.php?u=${url}`, '_blank');
        }

        function shareViaTelegram() {
            const text = encodeURIComponent('Check out Ritot website!');
            const url = encodeURIComponent(window.location.href);
            window.open(`https://t.me/share/url?url=${url}&text=${text}`, '_blank');
        }

        function copyLink() {
            const url = window.location.href;
            navigator.clipboard.writeText(url).then(() => {
                alert('Link copied to clipboard! üéâ');
            }).catch(() => {
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = url;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                alert('Link copied to clipboard! üéâ');
            });
        }

        // Close modal when clicking outside
        document.getElementById('shareModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeShareModal();
            }
        });

        // Smooth scroll for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });

        // Add scroll effect to navigation
        let lastScroll = 0;
        window.addEventListener('scroll', () => {
            const nav = document.querySelector('nav');
            const currentScroll = window.pageYOffset;
            
            if (currentScroll <= 0) {
                nav.style.boxShadow = 'none';
            } else {
                nav.style.boxShadow = '0 5px 20px rgba(255, 107, 53, 0.3)';
            }
            
            lastScroll = currentScroll;
        });
    </script>
</body>
</html>
